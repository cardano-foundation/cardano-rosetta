{
  "name": "cardano-rosetta-server",
  "version": "0.0.1",
  "description": "Rosetta API server specification implementation",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "generate-rosetta-types": "dtsgen --out ./types/types.d.ts ./rosetta-specifications/api.json",
    "dev": "ts-node-dev --respawn --transpileOnly --watch ./src ./src/server/index.ts",
    "lint": "eslint \"./test/**/*.ts\" \"./src/**/*.ts\""
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/input-output-hk/cardano-rosetta-server.git"
  },
  "keywords": [
    "cardano",
    "rosetta",
    "blockchain",
    "proof-of-stake"
  ],
  "author": "IOHK",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/input-output-hk/cardano-rosetta-server/issues"
  },
  "homepage": "https://github.com/input-output-hk/cardano-rosetta-server#readme",
  "devDependencies": {
    "@atixlabs/eslint-config": "1.2.3",
    "@types/jest": "26.0.3",
    "@types/node": "14.0.14",
    "@typescript-eslint/eslint-plugin": "3.5.0",
    "@typescript-eslint/parser": "3.5.0",
    "dtsgenerator": "3.1.1",
    "eslint": "6.7.2",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-sonarjs": "0.5.0",
    "eslint-plugin-unicorn": "14.0.1",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.11",
    "prettier": "1.19.1",
    "ts-jest": "26.1.1",
    "ts-node-dev": "1.0.0-pre.50",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "fastify": "2.15.1",
    "fastify-blipp": "2.3.1",
    "fastify-openapi-glue": "1.6.0"
  }
}
